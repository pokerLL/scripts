MOUNT_DIR=/mnt
BACK_DIR=/home/mnt/back
NAS_DIR=/home/mnt/nas
BASE_DIR=/home/mnt/nas/warehouse/scripts-collection

DOCKER_DIR=/home/docker
LOG_DIR=/var/log/back

mkdir -p $DOCKER_DIR $BACK_DIR $LOG_DIR

if [ ! -d $BASE_DIR ]; then
     echo "Error: $BASE_DIR is not a valid directory"
fi

now() {
    date +"%Y-%m-%d %H:%M:%S"
}
