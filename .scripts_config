MOUNT_DIR=/mnt
DOCKER_DIR=/home/docker
BACK_DIR="$MOUNT_DIR"/BACKDISK
NAS_DIR="$MOUNT_DIR"/NASDISK
BASE_DIR="$NAS_DIR"/software/scripts-collection
LOG_DIR="$BACK_DIR"

mkdir -p $DOCKER_DIR $BACK_DIR $LOG_DIR

if [ ! -d $BASE_DIR ]; then
     echo "Error: $BASE_DIR is not a valid directory"
fi

now() {
    date +"%Y-%m-%d %H:%M:%S"
}